@model CorporateBankingApplication.Models.Client
@using CorporateBankingApplication.Enum
@{
    ViewBag.Title = "ClientDashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <!-- Welcome Section -->
    <div class="jumbotron bg-light p-5 rounded-lg shadow-sm mb-5">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-4 text-primary">Welcome to Client Dashboard!</h1>
                <p class="lead">Manage employees, payments, salary disbursements, and more efficiently with the tools provided below.</p>
            </div>
            <div class="col-md-4 text-center">
                <img src="~/Content/images/welcome.png" alt="Client Welcome" class="img-fluid" style="max-height: 300px;">
            </div>
        </div>
    </div>
    <!-- Client Onboarding Section -->
    @if (Model.OnBoardingStatus == CorporateStatus.REJECTED)
    {
        @*<div class="col-lg-4 col-md-6 mb-4">*@
        <div class="mb-4">
            <div class="card shadow-sm border-0 h-100 rounded-5">
                <div class="card-body text-center py-5">
                    <div class="icon-container mb-3">
                        <i class="fas fa-user-check fa-3x text-white"></i>
                    </div>
                    <h5 class="card-title text-primary">Client Onboarding</h5>
                    <p class="card-text">Your registration was rejected. Please update your details for re-onboarding.</p>
                    @Html.ActionLink("Go to Onboarding", "EditClientRegistrationDetails", "Client", null, new { @class = "btn btn-outline-primary" })
                </div>
            </div>
        </div>
    }
    @if (Model.OnBoardingStatus == CorporateStatus.APPROVED)
    {
        <!-- Services Section -->
        <h3 class="text-center text-primary mb-4">Services</h3>

        <div class="row">
            <!-- Employee Management Section -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card shadow-sm border-0 h-100 rounded-5">
                    <div class="card-body text-center py-5">
                        <div class="icon-container mb-3">
                            <i class="fas fa-users-cog fa-3x text-white"></i>
                        </div>
                        <h5 class="card-title text-primary">Employee Management</h5>
                        <p class="card-text">Manage your employees and their salary disbursement details.</p>
                        @Html.ActionLink("Go to Employee Management", "Index", "Client", null, new { @class = "btn btn-outline-primary" })
                    </div>
                </div>
            </div>
            <!-- Mange Beneficiaries Section -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card shadow-sm border-0 h-100 rounded-5">
                    <div class="card-body text-center py-5">
                        <div class="icon-container mb-3">
                            <i class="fas fa-users fa-3x text-white"></i>
                        </div>
                        <h5 class="card-title text-primary">Manage Beneficiaries</h5>
                        <p class="card-text">Manage your beneficiaries and their details.</p>
                        @Html.ActionLink("Go to Beneficiary Management", "ViewAllOutboundBeneficiaries", "Client", null, new { @class = "btn btn-outline-primary" })
                    </div>
                </div>
            </div>
            <!-- Payment Section -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card shadow-sm border-0 h-100 rounded-5">
                    <div class="card-body text-center py-5">
                        <div class="icon-container mb-3">
                            <i class="fas fa-credit-card fa-3x text-white"></i>
                        </div>
                        <h5 class="card-title text-primary">Payments</h5>
                        <p class="card-text">Make and manage your payments to BizBank and other transactions.</p>
                        @Html.ActionLink("Go to Payments", "ViewBeneficiaryListForPayment", "Client", null, new { @class = "btn btn-outline-primary" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <!-- Report Generation Section -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card shadow-sm border-0 h-100 rounded-5">
                    <div class="card-body text-center py-5">
                        <div class="icon-container mb-3">
                            <i class="fas fa-chart-line fa-3x text-white"></i>
                        </div>
                        <h5 class="card-title text-primary">Report Generation</h5>
                        <p class="card-text">Generate and view reports for payments and salaries.</p>
                        @Html.ActionLink("Go to Reports", "GenerateClientReports", "Client", null, new { @class = "btn btn-outline-primary" })
                    </div>
                </div>
            </div>
        </div>
}
    </div>