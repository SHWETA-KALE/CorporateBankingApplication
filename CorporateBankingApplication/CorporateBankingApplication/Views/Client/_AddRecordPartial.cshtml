                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control mb-4", id = "newEmail" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Position, htmlAttributes: new { @class = "control-label  mb-2" })
                        <span class="text-danger">*</span>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Position, new { htmlAttributes = new { @class = "form-control mb-4", id = "newPosition" } })
                            @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
                        </div>
                    </div>

